{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser" : true
    },
    "globals": {
        "Action"       : false,
        "__DEV__"      : false,
        "__PROD__"     : false,
        "__DEBUG__"    : false,
        "__DEBUG_NEW_WINDOW__" : false,
        "__BASENAME__" : false
    },
    "rules": {
        "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
        "max-len": [2, 120, 2]
    }
}
